<Page
    x:Class="EntranceExamRssk.Editor.WPF.Pages.AuthPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AuthPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock
            Margin="60,30,0,0"
            FontSize="35"
            FontWeight="SemiBold"
            Foreground="#c9112b"
            Text="Редактор тестов" />
        <StackPanel Margin="60" VerticalAlignment="Center">
            <TextBlock
                Margin="0,0,20,0"
                FontSize="25"
                Text="Сервисный пароль:" />
            <PasswordBox
                x:Name="password"
                Margin="0,5"
                FontSize="22" />
            <Button
                Height="30"
                Margin="0,6,0,0"
                Click="AuthClick"
                Content="Войти"
                FontSize="20"
                IsDefault="True" />
        </StackPanel>
        <Image Grid.Column="1" Source="../../Resources/Images/rssk_logo.jpg" />
    </Grid>
</Page>
